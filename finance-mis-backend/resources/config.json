{
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "finance_db",
    "user": "postgres",
    "password": "postgres"
  },
  "service": {
    "port": 9090,
    "context": "/api/v1"
  },
  "logging": {
    "level": "INFO",
    "file": "finance-mis-integration.log"
  },
  "security": {
    "enableApiKey": true,
    "apiKey": "your-secret-api-key-here"
  },
  "cors": {
    "enabled": true,
    "allowOrigins": ["*"],
    "allowMethods": ["GET", "POST", "PUT", "DELETE"],
    "allowHeaders": ["authorization", "content-type", "x-api-key"]
  }
}